{
  "name": "nodejs-in-action",
  "version": "0.0.1",
  "description": "这是一个nodejs实战项目",
  "main": "app.ts",
  "scripts": {
    "start:dev": "nodemon",
    "start:prod": "cross-env NODE_ENV=production node -r ts-node/register src/app.ts",
    "update:readme": "npx readme-md-generator -p ./template.md",
    "crawl": "node -r ts-node/register src/crawler/index.ts"
  },
  "author": "maybeeee",
  "license": "MIT",
  "dependencies": {
    "chalk": "^2.4.2",
    "cross-env": "^5.2.0",
    "dotenv": "^8.0.0",
    "glob": "^7.1.4",
    "koa": "^2.7.0",
    "koa-logger": "^3.2.1",
    "koa-router": "^7.4.0",
    "log4js": "^5.0.0",
    "puppeteer": "^1.19.0",
    "shelljs": "^0.8.3",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  },
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/dotenv": "^6.1.1",
    "@types/koa": "^2.0.49",
    "@types/koa-compose": "^3.2.4",
    "@types/koa-router": "^7.0.42",
    "@types/mongoose": "^5.5.12",
    "@types/node": "^12.7.1",
    "@types/puppeteer": "^1.19.1",
    "@types/shelljs": "^0.8.5",
    "husky": "^3.0.3",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1"
  },
  "repository": "git+https://github.com/maybeeee/nodejs.git",
  "keywords": [
    "nodejs",
    "docker"
  ],
  "bugs": {
    "url": "https://github.com/maybeeee/nodejs/issues"
  },
  "homepage": "https://github.com/maybeeee/nodejs#readme",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
